page-recharge {
    .money_choose {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        padding-top: 0.42rem;
        padding-bottom: 1.25rem;
        &>div {
            width: 28%;
            border: 1px solid #DF3F43;
            height: 2.92rem;
            border-radius: 0.25rem;
            margin-top: 0.83rem;
            margin-right: 2.7%;
            text-align: center;
            transition: .75s;
            p {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #DF3F43;
                letter-spacing: 2px;
                line-height: 2.92rem;
            }
        }
        .active {
            transition: .75s;
            background: #DF3F43!important;
            p {
                color: white!important;
            }
        }
    }
    .money_pay {
        .pay_type {
            height: 2.33rem;
            p {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                letter-spacing: 2px;
                line-height: 2.33rem;
                padding-left: 1.25rem;
            }
        }
        .item-inner {
            border-bottom: none!important;
        }
    }
    .rc_icon {
        width: 2.08rem;
        height: 2.08rem;
    }
    .money_type {
        margin-top: -1.25rem;
        .item-inner {
            border-bottom: none!important;
        }
        .item-ios {
            border-bottom: 1px solid #D8D8D8;
        }
        .money_num {
            font-style: normal;
            color: #DF3F43;
        }
    }
}