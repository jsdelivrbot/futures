<ion-header>
    <ion-navbar>
        <ion-title>个人信息</ion-title>
    </ion-navbar>
</ion-header>

<ion-content>
    <ion-item class="sf_topitem">
        <ion-avatar item-start>
            <img class="info_img" src="assets/images/my/my_icon_information@3x.png">
        </ion-avatar>
        <p>{{globaldata.account|phoneHide}}</p>
    </ion-item>
    <div class="nt"></div>
    <button ion-item (click)="gochildpage('实名认证')" no-lines class="my_item">
        <ion-label><em>实名认证</em></ion-label>
        <ion-note item-end><strong>{{globaldata.authState?'已认证':'未认证'}}</strong></ion-note>
    </button>
    <button ion-item (click)="gochildpage('手机号码')" no-lines class="my_item">
        <ion-label><em>手机号码</em></ion-label>
        <ion-note item-end>
            <strong *ngIf="globaldata.account">{{globaldata.account|phoneHide}}</strong>
            <strong *ngIf="!globaldata.account">未绑定</strong>
        </ion-note>
    </button>
    <div class="nt"></div>
    <button ion-item (click)="gochildpage('登录密码')" no-lines class="my_item">
        <ion-label><em>登录密码</em></ion-label>
        <ion-note item-end><strong>修改</strong></ion-note>
    </button>
    <button *ngIf="globaldata.showModule" ion-item (click)="gochildpage('提现密码')" no-lines class="my_item">
        <ion-label><em>提现密码</em></ion-label>
        <ion-note item-end><strong>{{globaldata.isMentionPassword?'修改':'未设置'}}</strong></ion-note>
    </button>
    <div class="nt"></div>
    <button *ngIf="globaldata.showModule" ion-item (click)="gochildpage('我的银行卡')" no-lines class="my_item">
        <ion-label><em>我的银行卡</em></ion-label>
        <ion-note item-end><strong>{{globaldata.cardCount}}</strong></ion-note>
    </button>
</ion-content>